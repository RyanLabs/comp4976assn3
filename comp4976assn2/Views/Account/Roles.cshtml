@model IEnumerable<comp4976assn2.Models.EditRoleViewModel>

@{
    ViewBag.Title = "Roles";
}

<h2>Roles</h2>

<p>
    @Html.ActionLink("Create New Role", "AddRole")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @if (item.Role != "Administrator")
                {
                    @Html.ActionLink("Delete", "DeleteRole", new { id = item.Role })
                }
            </td>
        </tr>
    }

</table>


<div>
    @Html.ActionLink("Back to Administration", "Index")
</div>
