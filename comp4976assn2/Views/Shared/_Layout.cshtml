<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/app.js"></script>
</head>
<body ng-app="GoodSamaratin">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("The Good Samaritan", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("New Client", "Create", "Client")</li>
                    <li>@Html.ActionLink("Report", "Create", "Reports")</li>
                    @if (ViewContext.HttpContext.User.IsInRole("Administrator"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Client Lookup Tables <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                @*Client Entities*@
                                <li>@Html.ActionLink("Abuser Relationship", "Index", "AbuserRelationship")</li>
                                <li>@Html.ActionLink("Age", "Index", "Age")</li>
                                <li>@Html.ActionLink("Assigned Worker", "Index", "AssignedWorker")</li>
                                <li>@Html.ActionLink("Crisis", "Index", "Crisis")</li>
                                <li>@Html.ActionLink("Duplicate File", "Index", "DuplicateFile")</li>
                                <li>@Html.ActionLink("Ethnicity", "Index", "Ethnicity")</li>
                                <li>@Html.ActionLink("Family Violence File", "Index", "FamilyViolenceFile")</li>
                                <li>@Html.ActionLink("File Status", "Index", "FileStatus")</li>
                                <li>@Html.ActionLink("Fiscal Year", "Index", "FiscalYear")</li>
                                <li>@Html.ActionLink("Incident", "Index", "Incident")</li>
                                <li>@Html.ActionLink("Program", "Index", "Program")</li>
                                <li>@Html.ActionLink("Referral Contact", "Index", "ReferralContact")</li>
                                <li>@Html.ActionLink("Referral Source", "Index", "ReferralSource")</li>
                                <li>@Html.ActionLink("Repeat Client", "Index", "RepeatClient")</li>
                                <li>@Html.ActionLink("Risk Level", "Index", "RiskLevel")</li>
                                <li>@Html.ActionLink("Risk Status", "Index", "RiskStatus")</li>
                                <li>@Html.ActionLink("Service", "Index", "Service")</li>
                                <li>@Html.ActionLink("Victim Of Incident", "Index", "VictimOfIncident")</li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Smart Lookup Tables <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                @*Smart Entities*@
                                <li>@Html.ActionLink("Sex Work/Exploitation", "Index", "SexWorkExploitation")</li>
                                <li>@Html.ActionLink("Multiple Perpetrators", "Index", "MultiplePerpetrators")</li>
                                <li>@Html.ActionLink("Drug-facilitated Assault", "Index", "DrugFacilitatedAssault")</li>
                                <li>@Html.ActionLink("City of Assault", "Index", "CityOfAssault")</li>
                                <li>@Html.ActionLink("City of Residence", "Index", "CityOfResidence")</li>
                                <li>@Html.ActionLink("Referring Hospital", "Index", "ReferringHospital")</li>
                                <li>@Html.ActionLink("Hospital Attended", "Index", "HospitalAttended")</li>
                                <li>@Html.ActionLink("Social Work Attendance", "Index", "SocialWorkAttendance")</li>
                                <li>@Html.ActionLink("Police Attendance", "Index", "PoliceAttendance")</li>
                                <li>@Html.ActionLink("Victim Services Attendance", "Index", "VictimServicesAttendance")</li>
                                <li>@Html.ActionLink("Medical Only", "Index", "MedicalOnly")</li>
                                <li>@Html.ActionLink("Evidence Stored", "Index", "EvidenceStored")</li>
                                <li>@Html.ActionLink("HIV Meds", "Index", "HIVMeds")</li>
                                <li>@Html.ActionLink("Referred to CBVS", "Index", "ReferredToCBVS")</li>
                                <li>@Html.ActionLink("Police Reported", "Index", "PoliceReported")</li>
                                <li>@Html.ActionLink("Third Party Report", "Index", "ThirdPartyReport")</li>
                                <li>@Html.ActionLink("Bad Date Report", "Index", "BadDateReport")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Administration", "Index", "Account")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - The Good Samaritan</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
